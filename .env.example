DATABASE_USER=gitquest
DATABASE_PASSWORD=gitquest_dev_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=gitquest

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
